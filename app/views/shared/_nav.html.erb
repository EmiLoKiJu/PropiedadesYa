<div class="container">
  <p class="mb-0 text-center">Controlador: <%= controller_name %></p>
  <p class="mb-0 text-center">Acción: <%= action_name %></p>
  <% if user_signed_in? %>
    <h2 class="mt-3">Conectado como <%= current_user.first_name %> <%= current_user.last_name %></h2>
  <% end %>
  <br />
  <%= link_to 'Portal', properties_path, class: 'btn btn-primary mb-2' %>
  <% if user_signed_in? %>
    <%= link_to 'Perfil', user_profile_path(current_user), class: 'btn btn-info mb-2' %>
    <%= link_to 'Cerrar sesión', custom_destroy_user_session_path, method: :delete, class: 'btn btn-danger mb-2' %>
  <% else %>
    <%= link_to 'Iniciar sesión', new_user_session_path, class: 'btn btn-success mb-2' %>
  <% end %>
  <% if controller_name == "properties" && action_name == "index" %>
    <div class="alert alert-warning mt-3" role="alert">
      (nota: Links para editar y eliminar los incluí solo para comprobar autorización)
    </div>
  <% end %>
</div>