<div>
  <% if (['sessions', 'passwords', 'registrations'].include?(controller_name) && action_name == 'new') || (controller_name == 'properties' && action_name == 'index') %>
    <%= link_to new_user_session_path do %>
      BACK
    <% end %>
  <% else %>
    <%= link_to properties_path do %>
      BACK
    <% end %>
  <% end %>
  <div class="title">
    <% if controller_name == 'properties' && action_name == 'index' %>
      PROPERTIES
    <% elsif controller_name == 'properties' && action_name == 'new' %>
      NEW PROPERTY
    <% elsif controller_name == 'properties' && action_name == 'show' %>
      PROPERTY
    <% elsif controller_name == 'sessions' && action_name == 'new' %>
      LOG IN
    <% elsif controller_name == 'registrations' && action_name == 'new' %>
      REGISTER
    <% elsif controller_name == 'passwords' && action_name == 'new' %>
      FORGOT YOUR PASSWORD?
    <% end %>
  </div>
</div>