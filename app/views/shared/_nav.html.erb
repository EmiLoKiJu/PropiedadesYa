<p class="mb-0 text-center">Controlador: <%= controller_name %></p>
<p class="mb-0 text-center">Acción: <%= action_name %></p>
<div class="container d-flex flex-column flex-md-row justify-content-between align-items-center w-100">
  <% if user_signed_in? %>
    <h3 class="mt-3 w-25">Conectado como <%= current_user.first_name %> <%= current_user.last_name %></h3>
  <% end %>
  <br />
  <div><%= link_to 'Portal', properties_path, class: 'btn btn-primary mb-2' %></div>
  <% if user_signed_in? %>
    <div><%= link_to 'Mis propiedades', user_profile_path(current_user), class: 'btn btn-info mb-2' %></div>
    <div><%= link_to 'Cerrar sesión', custom_destroy_user_session_path, method: :delete, class: 'btn btn-danger mb-2' %></div>
  <% else %>
    <div><%= link_to 'Iniciar sesión', new_user_session_path, class: 'btn btn-success mb-2' %></div>
  <% end %>
</div>
<% if controller_name == "properties" && action_name == "index" %>
  <div class="alert alert-warning mt-3" role="alert">
    (nota: Links para editar y eliminar los incluí solo para comprobar autorización)
  </div>
<% end %>