<h1>Propiedades</h1>
<%= form_with url: properties_path, method: :get, data: { turbo_frame: "properties", turbo_action: "advance" } do %>
  <%= text_field_tag "filter_title", nil, placeholder: "filter_title" %>
  <%= number_field_tag "filter_bathrooms", nil, placeholder: "Mínimo Nro de Baños" %>

  <div>
    <label>
      <%= radio_button_tag "filter_rent", "any", true %>
      Compra/Arriendo
    </label>
    <label>
      <%= radio_button_tag "filter_rent", "true" %>
      Compra
    </label>
    <label>
      <%= radio_button_tag "filter_rent", "false" %>
      Arriendo
    </label>
  </div>

  <%= submit_tag "Filter" %>
<% end %>

<%= turbo_frame_tag "properties" do %>
  <%= render partial: 'property', collection: @properties %>
  <%== pagy_nav(@pagy, link_extra: 'data_turbo_action="advance"') %>
<% end %>

<%= link_to 'Nueva Propiedad', new_property_path %>